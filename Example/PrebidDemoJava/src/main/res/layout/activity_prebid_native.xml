<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrebidNativeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Load DFP without Prebid"
            android:onClick="loadDFPWithoutPrebid"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Load DFP with Prebid"
            android:onClick="loadDFPWithPrebid"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Load MoPub without Prebid"
            android:onClick="loadMoPubWithoutPrebid"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Load MoPub with Prebid"
            android:onClick="loadMoPubWithPrebid"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/adFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
